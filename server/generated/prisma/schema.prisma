// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  createdTime DateTime @default(now())
  updatedTime DateTime @updatedAt
}

model Question {
  id         Int      @id @default(autoincrement())
  type       String // 'single', 'multiple', 'programming'
  content    String
  options    String? // JSON string for choices in single/multiple choice questions
  answer     String? // For single/multiple choice questions
  difficulty String // 'easy', 'medium', 'hard'
  language   String? // For programming questions
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
